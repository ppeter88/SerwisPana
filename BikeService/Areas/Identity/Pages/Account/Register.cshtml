@page
@using BikeService.Utility;
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="backgroundWhite">
        <h3>
            <span class="iconify" data-icon="raphael:customer" data-inline="false" data-width="28" data-height="28"></span>
            Nowy użytkownik
        </h3>
        <br />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row offset-md-1 offset-lg-2">
            <div class="col-md-2 text-right">
                <label for="Name" class="col-form-label">Nazwa</label>
            </div>
            <div class="col-md-6">
                <input asp-for="Input.Name" class="form-control" id="Name" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row offset-md-1 offset-lg-2">
            <div class="col-md-2 text-right">
                <label for="Phone" class="col-form-label">Telefon</label>
            </div>
            <div class="col-md-4">
                <input asp-for="Input.PhoneNumber" class="form-control" id="Phone" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row offset-md-1 offset-lg-2">
            <div class="col-md-2 text-right">
                <label for="Email" class="col-form-label">E-mail</label>
            </div>
            <div class="col-md-6">
                <input asp-for="Input.Email" class="form-control" id="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row offset-md-1 offset-lg-2">
            <div class="col-md-2 text-right">
                <label for="Password" class="col-form-label">Hasło</label>
            </div>
            <div class="col-md-4">
                <input asp-for="Input.Password" class="form-control" id="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row offset-md-1 offset-lg-2">
            <div class="col-md-2 text-right">
                <label for="ConfirmPassword" class="col-form-label">Powtórz hasło</label>
            </div>
            <div class="col-md-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" id="ConfirmPassword" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        @if(User.IsInRole(UserRoles.AdminUser))
        {
            <div class="form-group row offset-md-1 offset-lg-2">
                <div class="col-md-2 text-right">
                    <label for="Role" class="col-form-label">Rola</label>
                </div>
                <div class="col-md-6">
                    <select class="form-control" id="Role" name="sUserRole">
                        <option value="@UserRoles.ServicemanUser">@UserRoles.ServicemanUser</option>
                        <option value="@UserRoles.AdminUser">@UserRoles.AdminUser</option>
                    </select>
                </div>
            </div>
        }  

        <br />
        <div class="form-group row">
            <div class="col-md-6 offset-md-2 offset-lg-3">
                <div class="row">
                    <partial name="_CreateAndBackToListButton" />
                </div>
            </div>
        </div>
    </div>
</form>



